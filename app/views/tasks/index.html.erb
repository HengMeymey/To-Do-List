<h1 style="text-align: center">Task List</h1>

<div style="text-align: right; margin-bottom: 20px;">
  <%= link_to "Go to Category", categories_path, style: "padding: 10px 20px; background-color: #008CBA; color: white; text-decoration: none; border-radius: 4px;" %>
</div>

<table>
  <thead>
    <tr>
      <th>Task NO</th>
      <th>Task Name</th>
      <th>Category</th>
      <th>Completed</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.category.name %></td>
        <td><%= task.is_completed? ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task),  style: "background-color: #FFA500; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
           <%# <%= button_to 'Delete', @category, method: :delete, data: { confirm: 'Are you sure?' },  style: "background-color: red; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;display:inline;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="margin-top: 20px;">
  <%= link_to 'New Task', new_task_path, style: "background-color: green; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
</div>
